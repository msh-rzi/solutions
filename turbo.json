{
  "$schema": "https://turborepo.dev/schema.json",
  "ui": "tui",
  "globalEnv": [
    "APP_HOST",
    "APP_LINK_HOST",
    "APP_LINK_PROTOCOL",
    "PORT",
    "PORT_PORTFOLIO",
    "PORT_FIELD_LEVEL_PERMISSION_FILTERS",
    "PORT_DATA_GRID",
    "PORT_DASHBOARD",
    "PORT_ACID_TRANSACTION_SYSTEM",
    "PORT_QUERY_OPTIMIZATION",
    "DATABASE_URL",
    "DATABASE_URL_QUERY_OPTIMIZATION",
    "DATABASE_URL_QUERY_OPTIMIZATION_TEST",
    "RUN_QUERY_OPTIMIZATION_INTEGRATION_TESTS"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
