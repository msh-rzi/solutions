{
  "name": "query-optimization",
  "version": "0.0.1",
  "description": "NestJS + Prisma project demonstrating the N+1 query problem and optimizations.",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "check-types": "bunx tsc --noEmit",
    "dev": "bun --env-file=../../../.env --watch src/main.ts",
    "format": "prettier --write \"src/**/*.ts\" \"prisma/**/*.ts\"",
    "start": "bun --env-file=../../../.env src/main.ts",
    "start:dev": "bun run dev",
    "bun:dev": "bun run dev",
    "start:debug": "nest start --debug --watch",
    "start:prod": "bun --env-file=../../../.env dist/main.js",
    "lint": "bunx eslint \"src/**/*.ts\"",
    "test": "bunx jest --runInBand",
    "test:watch": "bunx jest --watch",
    "test:cov": "bunx jest --coverage --runInBand",
    "test:unit": "bunx jest --runInBand src/**/*.spec.ts --testPathIgnorePatterns=integration.spec.ts",
    "test:integration": "bunx jest --runInBand src/**/*.integration.spec.ts",
    "prisma:generate": "bun --env-file=../../../.env x prisma generate",
    "prisma:migrate:dev": "bun --env-file=../../../.env x prisma migrate dev --name init",
    "prisma:migrate:deploy": "bun --env-file=../../../.env x prisma migrate deploy",
    "prisma:db:push": "bun --env-file=../../../.env x prisma db push",
    "db:seed": "bun --env-file=../../../.env x prisma db seed"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/client": "^6.17.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bun": "^1.3.9",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.17.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.(spec|integration\\.spec)\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
