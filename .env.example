# ------------------------------------------------------------
# Root environment template for the full monorepo workspace.
# Copy this file to `.env` and adjust values for your machine.
# ------------------------------------------------------------

# General host behavior
APP_HOST=0.0.0.0
APP_LINK_PROTOCOL=http
APP_LINK_HOST=localhost
NODE_ENV=development

# Optional fallback port (used when app-specific port is not set)
PORT=3000

# Frontend app ports
PORT_PORTFOLIO=3010
PORT_FIELD_LEVEL_PERMISSION_FILTERS=3011
PORT_DATA_GRID=3012
PORT_DASHBOARD=3013

# Backend app ports
PORT_ACID_TRANSACTION_SYSTEM=3020
PORT_QUERY_OPTIMIZATION=3021

# Dashboard auth secret (set one of these; AUTH_SECRET is preferred)
AUTH_SECRET=change-me-please
NEXTAUTH_SECRET=change-me-please

# Databases
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/acid-transaction-system
DATABASE_URL_QUERY_OPTIMIZATION=postgresql://postgres:postgres@localhost:5432/query_optimization
DATABASE_URL_QUERY_OPTIMIZATION_TEST=postgresql://postgres:postgres@localhost:5432/query_optimization_test

# Query Optimization integration tests
RUN_QUERY_OPTIMIZATION_INTEGRATION_TESTS=false
